@{
    ViewData["Title"] = "Home Page";
}

@model LoginModel

<div class="container">
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <div class="mb-md-5 mt-md-4 pb-5">
                                @using (Html.BeginForm("Login", "Home", FormMethod.Post)){


                                <h2 class="fw-bold mb-2 text-uppercase">Login</h2>

                                <div class="form-outline form-white mb-4">
                                    <input type="text" id="Nickname" name="Nickname" class="form-control form-control-lg" />
                                    <label class="form-label" for="Nickname">Usuario</label>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input type="password" id="Passcode" name="Passcode" class="form-control form-control-lg" />
                                    <label class="form-label" for="Passcode">Contraseña</label>
                                </div>

                                <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">Contraseña olvidada?</a></p>


                                <div class="form-group">
                                        <button type="submit" class="btn btn-outline-light btn-lg px-5"> Login </button>
                                </div>
                                }

                            </div>

                            <div>
                                <p class="mb-0">
                                    Aun no tienes una cuenta? <a href="#!" class="text-white-50 fw-bold">Crear cuenta</a>
                                </p>
                            </div>

                            <div class="modal fade" id="MyPopUp" role="dialog">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-body text-dark">
                                            Usuario y/o contraseña incorrecto.
                                        </div>
                                    </div>
                                </div>  
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $(".AddPopUp").click(function(e) {
                $('#MyPopUp').modal('show');
            })
        })
    </script>
}