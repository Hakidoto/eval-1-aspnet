@{

    <header>
        <!-- Navbar -->
        <nav class=" navbar navbar-expand-xxl navbar-dark bg-dark">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggler01" aria-controls="navbarToggler01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarToggler01">
                    <a class="navbar-brand" href="#">Jefe de Area</a>
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a asp-controller="JefeArea" asp-action="AddTicket" class="nav-link active" aria-current="page">Nuevo</a>
                        </li>
                        <li class="nav-item active">
                            <a asp-controller="JefeArea" asp-action="ListTicket" class="nav-link" aria-current="page">Tickets de asistencia abiertos</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link" name="Logout" aria-current="page">Cerrar sesión</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Navbar -->
    </header>


    <div class="container">
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <div class="container">
                                    @using (Html.BeginForm("AddNewTicket", "JefeArea", FormMethod.Post))
                                    {
                                    <h2 class="fw-bold mb-2 text-uppercase">Crear Reporte</h2>
                                    <form>
                                        <div class="form-outline mb-4">
                                            <input type="text" name="Equipo" id="formInput1" class="form-control" />
                                                <label class="form-label" for="formInput1">Equipo designado</label>
                                        </div>

                                        <div class="form-outline mb-4">
                                                <input type="text" id="formInput2" name="Atencion" class="form-control" />
                                                <label class="form-label" for="formInput2">Atencion</label>
                                        </div>

                                        <div class="form-outline mb-4">
                                                <textarea class="form-control" name="Accion" id="formInput3" rows="4"></textarea>
                                                <label class="form-label" for="formInput3">Accion a realizar</label>
                                        </div>

                                        <button type="submit" class="btn btn-primary btn-block mb-4">Enviar</button>
                                    </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
}
