@model List<DBClassLib.Reporte>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Index";
}
@{
    <header>
        <!-- Navbar -->
        <nav class=" navbar navbar-expand-xxl navbar-dark bg-dark">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggler01" aria-controls="navbarToggler01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarToggler01">
                    <a class="navbar-brand" href="#">Jefe de Area</a>
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a asp-controller="JefeArea" asp-action="AddTicket" class="nav-link" aria-current="page">Nuevo</a>
                        </li>
                        <li class="nav-item active">
                            <a asp-controller="JefeArea" asp-action="ListTicket" class="nav-link active" aria-current="page">Tickets de asistencia abiertos</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link" name="Logout" aria-current="page">Cerrar sesión</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Navbar -->
    </header>

    <p class="text-center text-white fs-2">Reportes abiertos</p>
    <div class="container">
        <table class="table table-hover table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Equipo</th>
                    <th scope="col">Accion a realizar</th>
                    <th scope="col">Atencion</th>
                </tr>
            </thead>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem =>item.IdReporte)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem =>item.Equipo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem =>item.Accion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem =>item.Atencion)
                        </td>
                    </tr>
                }
            }
        </table>
    </div>

}
